<h1>Add a new review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: 'Write your review', error: "Can't send an empty review" %>
  <%= f.input :rating, hint: 'From 0 to 5' %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Back to restaurants", restaurants_path %>
